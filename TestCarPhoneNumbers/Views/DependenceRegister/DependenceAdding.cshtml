@section Scripts{
    <script src="~/js/DependenceRegister.js"></script>
}
<!DOCTYPE html>
<div class="form">
    <h1 for="pnumber">Привяжите номер телефона к номеру машины</h1>
    <div class="form-group">
        <label for="cnumber">Введите номер машины:</label>
        <input name="cnumber" id="cnumber" />
    </div>
    <div class="form-group">
        <label for="pnumber">Введите номер телефона:</label>
        <input name="pnumber" id="pnumber" />
    </div>
    <div class="form-group">
        <label for="isOwner">Является владельцем</label>
        <input type="checkbox" name="isOwner" id="isOwner" />
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary" onclick="addDependence()">Привязать</button>
    </div>

    <a href="/DependenceRegister/GetAllDependencies">Показать все связи</a>
</div>

